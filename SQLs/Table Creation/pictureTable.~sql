CREATE TABLE Picture
(pictureID     VARCHAR2(6)   not null,
 fileLocation VARCHAR2(100) not null,
 BIN            BLOB              null,
 FX_ALTA        DATE              null,
 CONSTRAINT PK_ARCHIVOS PRIMARY KEY (CO_ARCHIVO)
 ) 
 -------------------------------------------------------
 CREATE TABLE "pictureTable" (           
    ID_IMAGEN NUMBER(5,0),
    MIMETYPE VARCHAR2(255 BYTE),
    FILENAME VARCHAR2(255 BYTE),
    LAST_UPDATE DATE,
    CHARSET VARCHAR2(128 BYTE),
    PHOTO BLOB,
    NAME VARCHAR2(30 BYTE),
    CONSTRAINT PK_ARCHIVOS PRIMARY KEY (ID_IMAGEN)

);
